{
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./examples",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./lib",
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["@types/jest"]
  }
}